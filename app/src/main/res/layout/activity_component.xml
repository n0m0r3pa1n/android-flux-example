<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.nmp90.androidfluxarchitecture.ComponentActivity">

    <TextView
        android:id="@+id/tv_example_component"
        android:layout_centerHorizontal="true"
        android:text="This is an example how you can load apps with a custom component"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_load_apps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_example_component"
        android:text="LOAD APPS"
        />

    <com.nmp90.androidfluxarchitecture.components.AppsList
        android:id="@+id/apps_list"
        android:layout_below="@id/btn_load_apps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
